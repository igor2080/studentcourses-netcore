@model StudentCourses.Common.Models.CourseModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Groups
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.Groups.Length; i++)
            {
                if (i != 0)
                {
                    <text>|</text>
                }
                <a asp-action="Details" asp-route-id="@(Model.Groups.ElementAt(i).Id)" asp-controller="Group">@Model.Groups.ElementAt(i).Name</a>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
